{
  "name": "@platforma-open/milaboratories.software-ptexter",
  "version": "1.0.1",
  "description": "Text processing utilities for platforma",
  "scripts": {
    "build": "pl-pkg build",
    "prepublishOnly": "pl-pkg publish packages",
    "do-pack": "rm -f *.tgz && pl-pkg build && pnpm pack && mv *.tgz package.tgz"
  },
  "files": [
    "./dist/**/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@platforma-sdk/package-builder": "workspace:",
    "@platforma-open/milaboratories.runenv-python-3": "catalog:"
  },
  "block-software": {
    "entrypoints": {
      "phead-lines": {
        "binary": {
          "artifact": {
            "type": "python",
            "registry": "platforma-open",
            "environment": "@platforma-open/milaboratories.runenv-python-3:3.12.6",
            "dependencies": {
              "toolset": "pip",
              "requirements": "requirements-head.txt"
            },
            "root": "./src"
          },
          "cmd": [
            "python",
            "{pkg}/phead-lines.py"
          ]
        }
      },
      "wc-l": {
        "binary": {
          "artifact": {
            "type": "python",
            "registry": "platforma-open",
            "environment": "@platforma-open/milaboratories.runenv-python-3:3.12.6",
            "dependencies": {
              "toolset": "pip",
              "requirements": "requirements-wc-l.txt"
            },
            "root": "./src"
          },
          "cmd": [
            "python",
            "{pkg}/wc-l.py"
          ]
        }
      }
    }
  }
}
