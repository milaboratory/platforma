{
  "name": "@platforma-open/milaboratories.software-ptabler",
  "version": "1.12.2",
  "scripts": {
    "init-python:create-venv": "pyenv exec python -m venv --clear .venv",
    "init-python:install-deps": ".venv/bin/pip install --quiet --disable-pip-version-check -r",
    "init-python": "pnpm run init-python:create-venv && pnpm run init-python:install-deps src/requirements.dev.txt && pnpm run init-python:install-deps src/requirements.txt",
    "lint": "[ ! -d .venv ] || .venv/bin/ruff check",
    "build": "rm -rf ./dist && pl-pkg build",
    "prepublishOnly": "pl-pkg prepublish",
    "test": "[ ! -d .venv ] || (.venv/bin/python -m unittest discover --verbose -s src -p '*.py')",
    "do-pack": "rm -f *.tgz && pl-pkg build && pnpm pack && mv *.tgz package.tgz"
  },
  "files": [
    "./dist/**/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@platforma-sdk/package-builder": "workspace:*",
    "@platforma-open/milaboratories.runenv-python-3": "catalog:"
  },
  "block-software": {
    "entrypoints": {
      "main": {
        "binary": {
          "artifact": {
            "type": "python",
            "registry": "platforma-open",
            "environment": "@platforma-open/milaboratories.runenv-python-3:3.12.10",
            "dependencies": {
              "toolset": "pip",
              "requirements": "requirements.txt"
            },
            "root": "./src"
          },
          "cmd": [
            "python",
            "{pkg}/main.py"
          ]
        }
      }
    }
  }
}
