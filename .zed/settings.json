{
  "auto_install_extensions": {
    "vue": true,
    "yaml": true,
    "toml": true,
    "scss": true,
    "dockerfile": true,
    "docker-compose": true,
    "proto": true,
    "python": true,
    "ruff": true,
    "html": true,
    "basher": true,
    "github-actions": true,
    "markdownlint": true,
    "typos": true
  },
  "prettier": {
    "allowed": false
  },
  "lsp": {
    "oxlint": {
      "initialization_options": {
        "settings": {
          "run": "onType",
          "fixKind": "safe_fix",
          "typeAware": true,
          "disableNestedConfig": false,
          "unusedDisableDirectives": "deny"
        }
      }
    },
    "oxfmt": {
      "initialization_options": {
        "settings": {
          "run": "onSave"
        }
      }
    }
  },
  "languages": {
    "CSS": {
      "language_servers": ["oxfmt"],
      "formatter": [{ "language_server": { "name": "oxfmt" } }],
      "format_on_save": "on"
    },
    "SCSS": {
      "language_servers": ["oxfmt"],
      "formatter": [{ "language_server": { "name": "oxfmt" } }],
      "format_on_save": "on"
    },
    "HTML": {
      "language_servers": ["oxfmt"],
      "formatter": [{ "language_server": { "name": "oxfmt" } }],
      "format_on_save": "on"
    },
    "YAML": {
      "language_servers": ["oxfmt"],
      "formatter": [{ "language_server": { "name": "oxfmt" } }],
      "format_on_save": "on"
    },
    "Markdown": {
      "language_servers": ["oxfmt"],
      "formatter": [{ "language_server": { "name": "oxfmt" } }],
      "format_on_save": "on"
    },
    "JSON": {
      "language_servers": ["oxfmt"],
      "formatter": [{ "language_server": { "name": "oxfmt" } }],
      "format_on_save": "on"
    },
    "JavaScript": {
      "language_servers": ["oxlint", "oxfmt"],
      "formatter": [
        { "language_server": { "name": "oxfmt" } },
        { "code_action": "source.fixAll.oxc" }
      ],
      "format_on_save": "on"
    },
    "TypeScript": {
      "language_servers": ["typescript-language-server", "oxlint", "oxfmt"],
      "formatter": [
        { "language_server": { "name": "oxfmt" } },
        { "code_action": "source.fixAll.oxc" }
      ],
      "format_on_save": "on"
    }
  }
}
