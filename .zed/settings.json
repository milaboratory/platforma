{
  "auto_install_extensions": {
    "basher": true,
    "docker-compose": true,
    "dockerfile": true,
    "github-actions": true,
    "html": true,
    "markdownlint": true,
    "proto": true,
    "python": true,
    "ruff": true,
    "scss": true,
    "toml": true,
    "typos": true,
    "vue": true,
    "yaml": true
  },
  "languages": {
    "CSS": {
      "formatter": [{ "language_server": { "name": "oxfmt" } }]
    },
    "HTML": {
      "formatter": [{ "language_server": { "name": "oxfmt" } }]
    },
    "JavaScript": {
      "formatter": [
        { "language_server": { "name": "oxfmt" } },
        { "code_action": "source.fixAll.oxc" }
      ]
    },
    "JSON": {
      "formatter": [{ "language_server": { "name": "oxfmt" } }]
    },
    "JSONC": {
      "formatter": [{ "language_server": { "name": "oxfmt" } }]
    },
    "Markdown": {
      "formatter": [{ "language_server": { "name": "oxfmt" } }]
    },
    "SCSS": {
      "formatter": [{ "language_server": { "name": "oxfmt" } }]
    },
    "TypeScript": {
      "formatter": [
        { "language_server": { "name": "oxfmt" } },
        { "code_action": "source.fixAll.oxc" }
      ]
    },
    "Vue.js": {
      "formatter": [
        { "language_server": { "name": "oxfmt" } },
        { "code_action": "source.fixAll.oxc" }
      ]
    },
    "YAML": {
      "formatter": [{ "language_server": { "name": "oxfmt" } }]
    }
  },
  "lsp": {
    "oxlint": {
      "initialization_options": {
        "settings": {
          "unusedDisableDirectives": "deny"
        }
      }
    }
  }
}
