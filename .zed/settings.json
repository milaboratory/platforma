{
  "lsp": {
    "eslint": {
      "binary": {
        "path": "vscode-eslint-language-server",
        "arguments": ["--stdio"]
      },
      "settings": {
        "codeActionOnSave": {
          "mode": "all"
        },
        "format": true,
        "workingDirectory": {
          "mode": "auto"
        }
      }
    }
  },
  "languages": {
    "JavaScript": {
      "language_servers": ["eslint"],
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "TypeScript": {
      "language_servers": ["typescript-language-server", "eslint"],
      "formatter": {
        "language_server": {
          "name": "eslint"
        }
      },
      "format_on_save": "on"
    }
  }
}
