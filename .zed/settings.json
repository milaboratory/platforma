{
  "auto_install_extensions": {
    "vue": true,
    "yaml": true,
    "toml": true,
    "scss": true,
    "dockerfile": true,
    "docker-compose": true,
    "proto": true,
    "python": true,
    "ruff": true,
    "html": true,
    "basher": true,
    "github-actions": true,
    "markdownlint": true,
    "typos": true
  },
  "prettier": {
    "allowed": false
  },
  "lsp": {
    "oxlint": {
      "initialization_options": {
        "settings": {
          "disableNestedConfig": false,
          "fixKind": "safe_fix",
          "run": "onType",
          "typeAware": true,
          "unusedDisableDirectives": "deny"
        }
      }
    }
  },
  "languages": {
    "JavaScript": {
      "language_servers": ["oxlint"],
      "formatter": [{ "code_action": "source.fixAll.oxc" }],
      "format_on_save": "on"
    },
    "TypeScript": {
      "language_servers": ["typescript-language-server", "oxlint"],
      "formatter": [{ "code_action": "source.fixAll.oxc" }],
      "format_on_save": "on"
    }
  }
}
