{
  "name": "@platforma-sdk/package-builder",
  "version": "3.11.4",
  "description": "MiLaboratories Platforma Package builder",
  "keywords": [],
  "license": "UNLICENSED",
  "bin": {
    "pl-pkg": "./bin/run.mjs"
  },
  "files": [
    "bin/run.cmd",
    "bin/run.mjs",
    "dist",
    "assets"
  ],
  "type": "module",
  "scripts": {
    "build": "oclif-index && node --run fmt && ts-builder build --target node",
    "watch": "ts-builder build --target node --watch",
    "check": "ts-builder check --target node",
    "formatter:check": "ts-builder formatter --check",
    "linter:check": "ts-builder linter --check",
    "types:check": "ts-builder type-check --target node",
    "test": "vitest run --coverage",
    "do-pack": "rm -f *.tgz && pnpm pack && mv *.tgz package.tgz",
    "fmt": "ts-builder format"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "catalog:",
    "@aws-sdk/lib-storage": "catalog:",
    "@milaboratories/resolve-helper": "workspace:*",
    "@oclif/core": "catalog:",
    "@types/archiver": "^6.0.3",
    "@types/node": "catalog:",
    "archiver": "^7.0.1",
    "undici": "catalog:",
    "winston": "catalog:",
    "yaml": "catalog:",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@milaboratories/build-configs": "workspace:*",
    "@milaboratories/oclif-index": "workspace:*",
    "@milaboratories/ts-builder": "workspace:*",
    "@milaboratories/ts-configs": "workspace:*",
    "@platforma-open/milaboratories.runenv-python-3": "catalog:",
    "@types/archiver": "^6.0.3",
    "@vitest/coverage-istanbul": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "oclif": {
    "bin": "pl-pkg",
    "commands": {
      "identifier": "COMMANDS",
      "strategy": "explicit",
      "target": "./dist/index.js"
    },
    "dirname": "pl-pkg",
    "topicSeparator": " "
  }
}
