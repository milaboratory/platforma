{
  "name": "@platforma-sdk/package-builder",
  "version": "2.16.3",
  "description": "MiLaboratories Platforma Package builder",
  "type": "module",
  "scripts": {
    "type-check": "ts-builder types --target node",
    "build": "oclif-index && ts-builder build --target node",
    "watch": "ts-builder build --target node --watch",
    "test": "jest && node ../../tests/package-builder/test.js",
    "do-pack": "rm -f *.tgz && pnpm pack && mv *.tgz package.tgz"
  },
  "bin": {
    "pl-pkg": "./bin/run.mjs"
  },
  "files": [
    "bin/run.cmd",
    "bin/run.mjs",
    "dist"
  ],
  "keywords": [],
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-sdk/client-s3": "catalog:",
    "@aws-sdk/lib-storage": "catalog:",
    "@oclif/core": "catalog:",
    "canonicalize": "catalog:",
    "tar": "catalog:",
    "winston": "catalog:",
    "yaml": "catalog:",
    "zod": "catalog:",
    "@milaboratories/resolve-helper": "workspace:^"
  },
  "devDependencies": {
    "@jest/globals": "catalog:",
    "@milaboratories/oclif-index": "workspace:*",
    "@milaboratories/build-configs": "workspace:*",
    "@milaboratories/eslint-config": "workspace:^",
    "@types/archiver": "^6.0.3",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "archiver": "^7.0.1",
    "jest": "catalog:",
    "ts-jest": "catalog:",
    "typescript": "catalog:",
    "@milaboratories/ts-builder": "workspace:*",
    "@milaboratories/ts-configs": "workspace:*"
  },
  "oclif": {
    "bin": "pl-pkg",
    "commands": {
      "strategy": "explicit",
      "target": "./dist/index.js",
      "identifier": "COMMANDS"
    },
    "dirname": "pl-pkg",
    "topicSeparator": " "
  }
}