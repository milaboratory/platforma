{
  "name": "pl-package-builder-integration-1",
  "version": "1.0.0",
  "description": "The software description example",
  "scripts": {
    "build:descriptor": "pl-pkg build descriptors",
    "build": "rm -rf dist && pl-pkg build",
    "publish": "pl-pkg publish"
  },
  "block-software": {
    "registries": {
      "binary": {
        "milaboratories": {"storageURL": "s3://milab-euce1-prod-pkgs-s3-platforma-registry/pub/?region=eu-central-1"}
      }
    },
    "packages": {
      "with-environment": {
        "binary": {
          "registry": {
            "name": "milaboratories"
          },

          "root": "./src",

          "type": "python",
          "environment": "pl-package-builder-runenv-1:1.2.3",
          "requirements": "./requirements.txt",

          "entrypoints": {
            "hello": {
              "cmd": [ "python", "{pkg}/script1.py", "Hello from python!" ],
              "envVars": [ "MYVAR=1" ]
            },
            "goodbye": {
              "cmd": [ "python", "{pkg}/script1.py", "Have a nice day!" ],
              "envVars": [ "MYVAR=2" ]
            }
          }
        }
      },
      "current-arch": {
        "binary": {
          "registry": { "name": "milaboratories" },

          "root": "./src",

          "name": "package2",

          "entrypoints": {
            "hello2": {
              "cmd": [ "printf", "Hello from python!\n" ]
            }
          }
        }
      },
      "multiarch": {
        "binary": {
          "registry": { "name": "milaboratories" },

          "roots": {
            "linux-x64": "./x64/",
            "linux-aarch64": "./x64/",
            "macosx-x64": "./x64/",
            "macosx-aarch64": "./arm64/",
            "windows-x64": "./x64/"
          },

          "name": "package3",

          "entrypoints": {
            "starter": {
              "cmd": [ "true" ]
            }
          }
        }
      }
    }
  },
  "files": [
    "dist/"
  ],
  "license": "UNLICENSED",
  "dependencies": {},
  "devDependencies": {
    "@milaboratory/pl-package-builder": "file:../../.",
    "pl-package-builder-runenv-1": "file:../runenv"
  }
}
