{
  "name": "@milaboratories/ts-builder",
  "version": "1.2.7",
  "description": "TS build tool for the milaboratories packages",
  "bin": {
    "ts-builder": "./bin/ts-builder.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    "./configs/*": "./dist/configs/*"
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "do-pack": "rm -f *.tgz && pnpm pack && mv *.tgz package.tgz",
    "check": "oxlint && oxfmt --check && tsc --noEmit",
    "fmt": "oxlint --fix && oxfmt"
  },
  "dependencies": {
    "@milaboratories/build-configs": "workspace:*",
    "@milaboratories/ts-configs": "workspace:*",
    "commander": "^12.0.0",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "rollup": "catalog:",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vue-tsc": "catalog:"
  },
  "devDependencies": {}
}
