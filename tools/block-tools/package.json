{
  "name": "@platforma-sdk/block-tools",
  "version": "2.1.7",
  "description": "Utility to manipulate Platforma Blocks and Block Registry",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "type-check": "tsc --noEmit --composite false",
    "build": "vite build",
    "readme": "exec oclif readme",
    "test": "jest"
  },
  "bin": {
    "block-tools": "./bin/run.js"
  },
  "files": [
    "./bin/*",
    "./dist/**/*",
    "./src/**/*",
    "./README.md"
  ],
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-sdk/client-s3": "catalog:",
    "@milaboratories/pl-model-middle-layer": "workspace:^",
    "@milaboratories/ts-helpers": "workspace:^",
    "@milaboratories/ts-helpers-oclif": "workspace:^",
    "@oclif/core": "catalog:",
    "mime-types": "catalog:",
    "semver": "catalog:",
    "tar": "catalog:",
    "yaml": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@milaboratories/platforma-build-configs": "workspace:*",
    "typescript": "catalog:",
    "vite": "catalog:",
    "rollup-plugin-node-externals": "catalog:",
    "@rollup/plugin-node-resolve": "catalog:",
    "vite-plugin-dts": "catalog:",
    "@types/jest": "catalog:",
    "@types/mime-types": "catalog:",
    "@types/node": "catalog:",
    "@types/semver": "catalog:",
    "jest": "catalog:",
    "oclif": "catalog:",
    "ts-jest": "catalog:"
  },
  "oclif": {
    "bin": "block-tools",
    "commands": {
      "strategy": "explicit",
      "target": "./dist/cli.js",
      "identifier": "COMMANDS"
    },
    "dirname": "block-tools",
    "topicSeparator": " "
  }
}
