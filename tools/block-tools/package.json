{
  "name": "@platforma-sdk/block-tools",
  "version": "2.6.53",
  "description": "Utility to manipulate Platforma Blocks and Block Registry",
  "license": "UNLICENSED",
  "bin": {
    "block-tools": "./bin/run.js"
  },
  "files": [
    "./bin/*",
    "./dist/**/*",
    "./src/**/*",
    "./README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "oclif:index": "oclif-index --commands-root=./src/cmd/ --index-file=./src/cmd/index.ts && node --run fmt",
    "build": "vite build",
    "readme": "oclif readme",
    "test": "vitest run --coverage",
    "do-pack": "rm -f *.tgz && pnpm pack && mv *.tgz package.tgz",
    "check": "ts-builder check --target node",
    "formatter:check": "ts-builder formatter --check",
    "linter:check": "ts-builder linter --check",
    "types:check": "ts-builder type-check --target node",
    "fmt": "ts-builder format"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "catalog:",
    "@milaboratories/pl-http": "workspace:*",
    "@milaboratories/pl-model-common": "workspace:*",
    "@milaboratories/pl-model-middle-layer": "workspace:*",
    "@milaboratories/resolve-helper": "workspace:*",
    "@milaboratories/ts-helpers": "workspace:*",
    "@milaboratories/ts-helpers-oclif": "workspace:*",
    "@oclif/core": "catalog:",
    "@platforma-sdk/blocks-deps-updater": "workspace:*",
    "canonicalize": "catalog:",
    "lru-cache": "catalog:",
    "mime-types": "catalog:",
    "tar": "catalog:",
    "undici": "catalog:",
    "yaml": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@milaboratories/build-configs": "workspace:*",
    "@milaboratories/oclif-index": "workspace:*",
    "@milaboratories/ts-builder": "workspace:*",
    "@milaboratories/ts-configs": "workspace:*",
    "@rollup/plugin-node-resolve": "catalog:",
    "@types/mime-types": "catalog:",
    "@types/node": "catalog:",
    "@types/semver": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "oclif": "catalog:",
    "rollup-plugin-node-externals": "catalog:",
    "semver": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:"
  },
  "oclif": {
    "bin": "block-tools",
    "commands": {
      "identifier": "COMMANDS",
      "strategy": "explicit",
      "target": "./dist/cli.js"
    },
    "dirname": "block-tools",
    "topicSeparator": " "
  }
}
