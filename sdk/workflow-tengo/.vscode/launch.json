    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "run test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "/usr/local/bin/npm",
            "env": {
                "PL_ADDRESS": "http://test_user:test_password@127.0.0.1:6345",
                "PL_TEST_USER": "test_user",
                "PL_TEST_PASSWORD": "test_password",
            },
            "args": [
                "run",
                "test",
                "--",
                "file.test.ts",
                "-t",
                "file import test: 'import'",
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
