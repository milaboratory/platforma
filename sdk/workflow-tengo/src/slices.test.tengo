test := import(":test")
slices := import(":slices")

TestMiLength := func() {
	test.equal(slices.length([]), 0, "slices.length must behave liken len() for slices")
	test.equal(slices.length([1, 2, 3]), 3, "slices.length must behave liken len() for slices")
	test.equal(slices.length({}), 0, "slices.length must behave liken len() for maps")
	test.equal(slices.length({ a: 1, b: 2 }), 2, "slices.length must behave liken len() for maps")
	test.equal(slices.length(undefined), 0, "slices.length must return 0 for undefined")
}

TestMiSliceAppend := func() {
	test.equal(slices.safeAppend([1], 2, 3), [1, 2, 3], "slices.safeAppend([1], 2, 3) is wrong")
	test.equal(slices.safeAppend([], 1, 2, 3), [1, 2, 3], "slices.safeAppend([], 1, 2, 3) is wrong")
	test.equal(slices.safeAppend(undefined, 1, 2, 3), [1, 2, 3], "slices.safeAppend(undefined, 1, 2, 3) is wrong")
}
