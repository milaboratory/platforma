path := import(":path")
test := import(":test")

TestSplit := func() {
	test.equal(
		path.split("dir1/dir2/dir3/abc.txt", '/'),
		["dir1", "dir2", "dir3", "abc.txt"]
	)
	test.equal(
		path.split("justFile.txt"),
		["justFile.txt"]
	)
	test.equal(
		path.split(""),
		[""]
	)
	test.equal(
		path.split("dir1/", '/'),
		["dir1", ""]
	)
}

TestGetBasenameDirs := func() {
	test.equal(
		path.getBasenameDirs("dir1/dir2/dir3/abc.txt", '/'),
		["dir1", "dir1/dir2", "dir1/dir2/dir3", "dir1/dir2/dir3/abc.txt"]
	)
	test.equal(
		path.getBasenameDirs("justFile.txt"),
		["justFile.txt"]
	)
	test.equal(
		path.getBasenameDirs(""),
		[""]
	)
	test.equal(
		path.getBasenameDirs("dir1/dir2/", '/'),
		["dir1", "dir1/dir2", "dir1/dir2/"]
	)
}

TestGetExtension := func() {
	test.equal(path.getExtension("justFile.exe", undefined), "exe")
	test.equal(path.getExtension("justFile.tar.gz", undefined), "tar.gz")
	test.equal(path.getExtension("justFile.bin.gz", undefined), "bin.gz")
	test.equal(path.getExtension("justFile.bin.gz", undefined), "bin.gz")
	test.equal(path.getExtension("justDir/bin", '/'), "")
	test.equal(path.getExtension("justDir/.bin", '/'), "bin")
	test.equal(path.getExtension("justDir.bin/gz", '/'), "")
	test.equal(path.getExtension("justDir.bin/.gz", '/'), "gz")
}
