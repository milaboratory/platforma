/** Runs a simple echo and returns stdout */

self := import(":tpl")
assets := import(":assets")
smart := import(":smart")
exec := import(":exec")
ll := import(":ll")

self.defineOutputs(["p"])

self.body(func(inputs) {
	run := exec.builder().
		cmd("/usr/bin/env").
		arg("bash").
		arg("-c").
		arg("echo 'text1' > file1.txt && echo 'text2' > file2.txt").
		processWorkdir("p", assets.importTemplate(":exec.test.wd_processor_1"), {}).
		run()

	return {
		p: run.getProcessorResult("p")
	}
})
