/** Runs a simple echo and returns stdout */

self := import(":tpl")
smart := import(":smart")
exec := import(":exec")

self.defineOutputs(["main"])

self.body(func(inputs) {
	run := exec.builder().
		cmd("/usr/bin/env").
		arg("bash").
		arg("-c").
		arg("echo Hello from bash").
		saveStdoutContent().
		run()

	result := {
		main: run.getStdoutFileContent()
	}

	return result
})
