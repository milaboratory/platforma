{
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "es2021",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
}