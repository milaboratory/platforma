{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "lint": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.*", ".eslintrc.*"],
      "env": ["PL_PKG_DEV"],
      "dependsOn": ["^build"]
    },
    "type-check": {
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "build": {
      "outputs": ["./dist/**", "./block-pack/**", "./pkg-*.tgz"],
      "passThroughEnv": [
        "GENERATE_TAGS",
        "TAGS_ADDITIONAL_ARGS",
        "TAGS_FILE",

        "PL_DOCKER_REGISTRY_PUSH_TO",
        "PL_DOCKER_BUILD",
        "PL_DOCKER_NO_BUILD",
        "PL_DOCKER_AUTOPUSH",
        "PL_DOCKER_NO_AUTOPUSH"
      ],
      "env": ["PL_PKG_DEV"],
      "dependsOn": ["type-check", "lint", "^build"]
    },
    "test": {
      "outputs": ["./coverage/**", "test-report.junit.xml"],
      "env": ["TEST_CACHE_CRUTCH"],
      "dependsOn": ["build"],
      "passThroughEnv": [
        "PL_ADDRESS",
        "PL_TEST_PASSWORD",
        "PL_TEST_USER",
        "PL_TEST_PROXY",
        "PL_TEST_STORAGE_ID",
        "DEBUG",
        "MI_LICENSE",

        "PL_DOCKER_REGISTRY_PUSH_TO",
        "PL_DOCKER_BUILD",
        "PL_DOCKER_NO_BUILD",
        "PL_DOCKER_AUTOPUSH",
        "PL_DOCKER_NO_AUTOPUSH"
      ]
    },
    "do-pack": {
      "dependsOn": ["build"],
      "outputs": ["package.tgz"]
    },
    "publish-to-local-registry": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
