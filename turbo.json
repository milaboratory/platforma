{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "type-check": {
      "dependsOn": ["^build"]
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["./dist/**"],
      "dependsOn": ["type-check", "^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "passThroughEnv": ["PL_ADDRESS", "PL_TEST_PASSWORD", "PL_TEST_USER", "PL_TEST_PROXY"]
    }
  }
}
