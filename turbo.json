{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "fmt": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", ".oxfmtrc.json", ".oxlintrc.json"]
    },
    "check": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", ".oxfmtrc.json", ".oxlintrc.json", "tsconfig.json"],
      "dependsOn": ["^build"]
    },
    "formatter:check": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", ".oxfmtrc.json"]
    },
    "linter:check": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", ".oxlintrc.json"]
    },
    "types:check": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "dependsOn": ["^build"]
    },
    "build": {
      "outputs": ["./dist/**", "./block-pack/**", "./pkg-*.tgz"],
      "env": ["PL_PKG_DEV"],
      "dependsOn": ["^build", "types:check"],
      "passThroughEnv": [
        "GENERATE_TAGS",
        "TAGS_ADDITIONAL_ARGS",
        "TAGS_FILE",
        "PL_DOCKER_REGISTRY_PUSH_TO",
        "PL_DOCKER_BUILD",
        "PL_DOCKER_NO_BUILD",
        "PL_DOCKER_AUTOPUSH",
        "PL_DOCKER_NO_AUTOPUSH"
      ]
    },
    "test": {
      "outputs": ["./coverage/**", "test-report.junit.xml"],
      "dependsOn": ["build"],
      "passThroughEnv": [
        "PL_ADDRESS",
        "PL_TEST_PASSWORD",
        "PL_TEST_USER",
        "PL_TEST_PROXY",
        "PL_TEST_STORAGE_ID",
        "DEBUG",
        "MI_LICENSE",
        "PL_DOCKER_REGISTRY_PUSH_TO",
        "PL_DOCKER_BUILD",
        "PL_DOCKER_NO_BUILD",
        "PL_DOCKER_AUTOPUSH",
        "PL_DOCKER_NO_AUTOPUSH"
      ]
    },
    "do-pack": {
      "dependsOn": ["build"],
      "outputs": ["package.tgz"]
    }
  }
}
