{
  "name": "example-pl-package-runenv-1",
  "version": "1.0.0",
  "description": "Example of software to be used as runenv",
  "scripts": {
    "cleanup": "rm -rf ./dist/ && rm -f ./pkg-*.tgz",
    "reset": "npm run cleanup && rm -rf ./node_modules/",

    "build": "rm -rf dist && pl-pkg build"
  },
  "block-software": {
    "entrypoints": {
      "python": {
        "environment": {
          "artifact": {
            "registry": "example",

            "type": "environment",
            "runtime": "python",
            "root": "./src",
            "binDir": "."
          }
        }
      },
      "java": {
        "environment": {
          "artifact": {
            "registry": "example",

            "type": "environment",
            "runtime": "java",
            "root": "./src",
            "binDir": "."
          }
        }
      },
      "r": {
        "environment": {
          "artifact": {
            "registry": "example",

            "type": "environment",
            "runtime": "R",
            "root": "./src",
            "binDir": "."
          }
        }
      }
    }
  },
  "files": [
    "dist/"
  ],
  "license": "UNLICENSED",
  "dependencies": {},
  "devDependencies": {
    "@platforma-sdk/package-builder": "workspace:"
  }
}
