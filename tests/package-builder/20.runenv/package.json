{
  "name": "@milaboratories/example-pl-package-runenv-1",
  "version": "1.1.0",
  "private": true,
  "description": "Example of software to be used as runenv",
  "scripts": {
    "cleanup": "rm -rf ./dist/ && rm -f ./pkg-*.tgz",
    "reset": "npm run cleanup && rm -rf ./node_modules/",
    "//check": "rm -rf dist && env -u PL_PKG_DEV pl-pkg build && node ./verify.mjs"
  },
  "block-software": {
    "entrypoints": {
      "python": {
        "environment": {
          "artifact": {
            "registry": "example-python-registry",
            "type": "environment",
            "runtime": "python",
            "python-version": "3.12.10",
            "envVars": [
              "MY_ENV_VAR=1234"
            ],
            "roots": {
              "linux-x64": "./src",
              "linux-aarch64": "./src",
              "macosx-x64": "./src",
              "macosx-aarch64": "./src"
            },
            "binDir": "."
          }
        }
      },
      "java": {
        "environment": {
          "artifact": {
            "registry": "example-java-registry",
            "runtime": "java",
            "java-version": "21",
            "roots": {
              "linux-x64": "./src",
              "linux-aarch64": "./src",
              "macosx-x64": "./src",
              "macosx-aarch64": "./src",
              "windows-x64": "./src"
            },
            "binDir": "."
          }
        }
      },
      "r": {
        "environment": {
          "artifact": {
            "registry": "example-r-registry",
            "type": "environment",
            "runtime": "R",
            "r-version": "4.3.1",
            "roots": {
              "linux-x64": "./src",
              "linux-aarch64": "./src",
              "macosx-x64": "./src",
              "macosx-aarch64": "./src",
              "windows-x64": "./src"
            },
            "binDir": "."
          }
        }
      }
    }
  },
  "files": [
    "dist/"
  ],
  "license": "UNLICENSED",
  "dependencies": {},
  "devDependencies": {
    "@platforma-sdk/package-builder": "workspace:*"
  }
}
