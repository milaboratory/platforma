// Test template for PColumnData/Json functionality

self := import("@platforma-sdk/workflow-tengo:tpl")

ll := import("@platforma-sdk/workflow-tengo:ll")
assets := import("@platforma-sdk/workflow-tengo:assets")
maps := import("@platforma-sdk/workflow-tengo:maps")
pframes := import("@platforma-sdk/workflow-tengo:pframes")

bodyTpl := assets.importTemplate(":pframes.proc_3_json_body")

self.awaitState("InputsLocked")
self.awaitState("params", "ResourceReady")

self.body(func(inputs) {
	params := inputs.params

	outputsToCollect := [{
		type: "Resource",
		name: "result",
		spec: {
			kind: "PColumn",
			valueType: "String",
			name: "result",
			axesSpec: []
		}
	}]

	processResult := pframes.processColumn({
		spec: inputs.spec,
		data: inputs.data
	}, bodyTpl, outputsToCollect, maps.merge({
		aggregate: params.aggregate,
		passKey: params.passKey,
		traceSteps: [{
			type: "Processing",
			id: "json_test",
			importance: 10,
			label: "JSON Processing Test"
		}]
	}))

	return {
		result: processResult.output("result").data
	}
})
